<ResourceDictionary
    x:Class="Messages.Shared.Resources.DataTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Messages.Shared.Resources" xmlns:viewmodels="using:Messages.Shared.ViewModels">
    <DataTemplate x:Key="FromMessageTemplate" x:DataType="viewmodels:MessageViewModel">
        <Grid>
            <Border CornerRadius="12" Padding="12" HorizontalAlignment="Right" Margin="12,0,0,0" Background="#317bfa">
                <TextBlock Text="{x:Bind Text}" TextWrapping="WrapWholeWords" Foreground="White" />
            </Border>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="ToMessageTemplate" x:DataType="viewmodels:MessageViewModel">
        <Grid>
            <Border CornerRadius="12" Padding="12" HorizontalAlignment="Left" Margin="12,0,0,0" Background="#ececec">
                <TextBlock Text="{x:Bind Text}" TextWrapping="WrapWholeWords" Foreground="Black" />
            </Border>
        </Grid>
    </DataTemplate>

    <local:MessageTemplateSelector x:Key="MessageTemplateSelector" FromTemplate="{StaticResource FromMessageTemplate}" ToTemplate="{StaticResource ToMessageTemplate}" />
</ResourceDictionary>
