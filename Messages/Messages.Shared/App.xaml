<Application
    x:Class="Messages.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Messages" 
    xmlns:resources="using:Messages.Shared.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <Color x:Key="NavPaneBackgroundColor">#1F1F1F</Color>
                    <SolidColorBrush x:Key="HeaderBackgroundThemeBrush" Color="{ThemeResource NavPaneBackgroundColor}" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="NavPaneBackgroundColor">#f3f2f7</Color>
                    <SolidColorBrush x:Key="HeaderBackgroundThemeBrush" Color="{ThemeResource NavPaneBackgroundColor}" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
